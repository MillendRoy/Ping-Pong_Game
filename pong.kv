<Paddle>:
    size: 25,100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'wood.jpg'
            

<PongBall>:
    size: 50,50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'ball.png'
    
<PongGame>:    
    ball: pong_ball
    canvas:
        Rectangle:
            pos: self.center_x, 0
            size: self.width, self.height
            source: 'image.jpg'
        Rectangle:
            pos: 0, 0
            size: self.width / 2, self.height
            source: 'img.jpg'        

    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
	
	PongBall:
    	id: pong_ball
        center: self.parent.center
        
    Paddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    Paddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y